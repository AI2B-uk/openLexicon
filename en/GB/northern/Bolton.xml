<?xml version="1.0" encoding="UTF-8"?>
<lexicon version="1.0"
         xmlns="http://www.w3.org/2005/01/pronunciation-lexicon"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.w3.org/2005/01/pronunciation-lexicon
                             http://www.w3.org/TR/pronunciation-lexicon/pronunciation-lexicon.xsd"
         alphabet="ipa"
         xml:lang="en-GB">

    <!-- Short 'a' in words like 'bath' -->
    <lexeme>
        <grapheme>bath</grapheme>
        <phoneme>bæθ</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>dance</grapheme>
        <phoneme>dæns</phoneme>
    </lexeme>

    <!-- 'Strut' vowel pronounced as /ʊ/ -->
    <lexeme>
        <grapheme>up</grapheme>
        <phoneme>ʊp</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>love</grapheme>
        <phoneme>lʊv</phoneme>
    </lexeme>

    <!-- H-dropping -->
    <lexeme>
        <grapheme>house</grapheme>
        <alias>ouse</alias>
    </lexeme>
    <lexeme>
        <grapheme>have</grapheme>
        <alias>ave</alias>
    </lexeme>

    <!-- Monophthongization of diphthongs -->
    <lexeme>
        <grapheme>face</grapheme>
        <phoneme>feːs</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>make</grapheme>
        <phoneme>meːk</phoneme>
    </lexeme>

    <!-- Non-rhoticity (dropping 'r' in certain positions) -->
    <lexeme>
        <grapheme>car</grapheme>
        <phoneme>kɑː</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>hard</grapheme>
        <phoneme>hɑːd</phoneme>
    </lexeme>

    <!-- Yod-dropping -->
    <lexeme>
        <grapheme>news</grapheme>
        <phoneme>nuːz</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>student</grapheme>
        <phoneme>ˈstuːdənt</phoneme>
    </lexeme>

    <!-- Final 'g' dropping in '-ing' -->
    <lexeme>
        <grapheme>going</grapheme>
        <alias>goin'</alias>
    </lexeme>
    <lexeme>
        <grapheme>coming</grapheme>
        <alias>comin'</alias>
    </lexeme>

    <!-- Shortening of long vowels -->
    <lexeme>
        <grapheme>food</grapheme>
        <phoneme>fʊd</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>school</grapheme>
        <phoneme>skʊl</phoneme>
    </lexeme>

    <!-- Additional regional words and expressions -->
    <lexeme>
        <grapheme>nowt</grapheme>
        <phoneme>naʊt</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>owt</grapheme>
        <phoneme>aʊt</phoneme>
    </lexeme>

    <!-- 'Me' instead of 'my' -->
    <lexeme>
        <grapheme>my</grapheme>
        <alias>me</alias>
    </lexeme>

    <!-- Vowel shortening in 'air' words -->
    <lexeme>
        <grapheme>fair</grapheme>
        <phoneme>feə</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>care</grapheme>
        <phoneme>keə</phoneme>
    </lexeme>

    <!-- 'Was' pronounced as 'were' -->
    <lexeme>
        <grapheme>was</grapheme>
        <phoneme>wɜːz</phoneme>
    </lexeme>

    <!-- 'Us' used instead of 'me' -->
    <lexeme>
        <grapheme>me</grapheme>
        <alias>us</alias>
    </lexeme>

    <!-- Additional commonly used words -->
    <lexeme>
        <grapheme>about</grapheme>
        <phoneme>əˈbaʊt</phoneme>
    </lexeme>
    <lexeme>
        <grapheme>though</grapheme>
        <phoneme>ðəʊ</phoneme>
    </lexeme>

</lexicon>
